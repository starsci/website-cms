{
  "kind": "collectionType",
  "collectionName": "club_announcements",
  "info": {
    "singularName": "club-announcement",
    "pluralName": "club-announcements",
    "displayName": "Club Announcement",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "authors": {
      "type": "customField",
      "options": {
        "separator": "semicolon"
      },
      "customField": "plugin::string-array.input"
    },
    "publishDate": {
      "type": "datetime",
      "required": true
    },
    "body": {
      "type": "blocks",
      "required": true
    },
    "club": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::club.club"
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": false
    }
  }
}
